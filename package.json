{
  "name": "boilerplate-html5",
  "version": "1.0.0",
  "description": "HTML5 Boilerplate (mostly for games)",
  "main": "index.js",
  "scripts": {
    "cdn:sync:soft": "cross-env NODE_ENV=sync-soft node ./_npm-utils/cdn-sync.js",
    "cdn:sync:hard": "cross-env NODE_ENV=sync-hard node ./_npm-utils/cdn-sync.js",
    "dev": "npm-run-all -p -r _localstatic  _localcdn _dev",
    "_dev": "cross-env NODE_ENV=dev webpack-dev-server --open --config _config/webpack.config.js",
    "test:dev": "npm-run-all --silent -p -r _localstatic _localcdn _test:dev",
    "_test:dev": "cross-env NODE_ENV=testdev webpack-dev-server --open --config _config/webpack.config.js",
    "test:dist:production": "npm-run-all --silent -s clean _build:test:dist:production -p -r _localstatic _localcdn _test:dist:production",
    "_build:test:dist:production": "cross-env NODE_ENV=testdist webpack --optimize-minimize --config _config/webpack.config.js",
    "_test:dist:production": "cross-env NODE_ENV=testdist karma start _config/karma.conf.js",
    "test:dist": "npm-run-all --silent -s clean _build:test:dist -p -r _localstatic _localcdn _test:dist",
    "_build:test:dist": "cross-env NODE_ENV=testdist webpack --optimize-minimize --config _config/webpack.config.js",
    "_test:dist": "cross-env NODE_ENV=testdist karma start _config/karma.conf.js",
    "build:dist": "npm-run-all -s clean _copydist _build:dist",
    "_copydist": "mkdir dist && cp -R static/dist-include/* dist/",
    "_build:dist": "cross-env NODE_ENV=production webpack -p --config _config/webpack.config.js",
    "clean": "rm -rf ./dist && rm -rf ./build && rm -rf ./test-dist && rm -rf ./test-dev && rm -rf ./coverage",
    "build:webpack": "npm-run-all -s clean _build:webpack",
    "_build:webpack": "cross-env NODE_ENV=production webpack --config _config/webpack.config.js",
    "build:tsc": "npm-run-all -s clean _build:tsc",
    "_build:tsc": "tsc --project _config/tsconfig.json",
    "dist:server": "npm-run-all --silent build:dist _dist:server",
    "_dist:server": "http-server ./dist -p 5000 --cors",
    "_localstatic": "http-server ./static -p 4000 --cors",
    "_localcdn": "http-server ./cdn -p 4001 --cors"
  },
  "author": "David Komer",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/file-saver": "^0.0.1",
    "@types/mocha": "^2.2.41",
    "@types/react": "16.0.0",
    "@types/react-dom": "15.5.2",
    "@types/react-router-dom": "4.0.7",
    "chai": "^4.1.0",
    "cross-env": "^5.0.3",
    "css-loader": "0.28.4",
    "file-saver": "^1.3.3",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.10.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-source-map-support": "1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "mocha-loader": "^1.1.1",
    "mocha-typescript": "^1.1.7",
    "npm-run-all": "^4.0.2",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-router": "4.1.2",
    "react-router-dom": "4.1.2",
    "rimraf": "2.6.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.18.2",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  }
}
